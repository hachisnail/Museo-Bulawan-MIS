// TwoColumnBlock.js
import { Node } from '@tiptap/core'
import { ReactNodeViewRenderer } from '@tiptap/react'
import TwoColumnComponent from './TwoColumnComponent'

// (Optional) Import them if Tiptap doesnâ€™t already know them:
import { ColumnLeft } from './ColumnLeft'
import { ColumnRight } from './ColumnRight'

export const TwoColumnBlock = Node.create({
  name: 'twoColumnBlock',
  group: 'block',

  // Force exactly these two sub-nodes in order:
  content: 'columnLeft columnRight',

  defining: true,
  isolating: true,

  parseHTML() {
    return [
      { tag: 'div[data-type="two-column-block"]' },
    ]
  },

  renderHTML() {
    return [
      'div',
      { 'data-type': 'two-column-block', class: 'two-column-grid' },
      0,
    ]
  },

  addNodeView() {
    return ReactNodeViewRenderer(TwoColumnComponent)
  },

  addCommands() {
    return {
      insertTwoColumnBlock:
        () =>
        ({ chain }) => {
          return chain()
            .insertContent({
              type: this.name,
              content: [
                {
                  type: 'columnLeft',
                  content: [
                    // At least one empty paragraph in the left column
                    { type: 'paragraph' },
                  ],
                },
                {
                  type: 'columnRight',
                  content: [
                    // At least one empty paragraph in the right column
                    { type: 'paragraph' },
                  ],
                },
              ],
            })
            .run()
        },
    }
  },
})
