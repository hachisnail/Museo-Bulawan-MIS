// components/editor/TwoColumnBlock.js
import { Node } from '@tiptap/core'
import { ReactNodeViewRenderer } from '@tiptap/react'
import TwoColumnComponent from './TwoColumnComponent'

export const TwoColumnBlock = Node.create({
  name: 'twoColumnBlock',
  
  group: 'block',
  
  content: 'block+ block+',
  
  defining: true,
  
  parseHTML() {
    return [
      {
        tag: 'div[data-type="two-column-block"]',
      },
    ]
  },
  
  renderHTML() {
    return ['div', { 'data-type': 'two-column-block', class: 'two-column-grid' }, 0]
  },
  
  addNodeView() {
    return ReactNodeViewRenderer(TwoColumnComponent)
  },
  
  addCommands() {
    return {
      insertTwoColumnBlock: () => ({ chain }) => {
        return chain()
          .insertContent({
            type: this.name,
            content: [
              {
                type: 'paragraph',
              },
              {
                type: 'paragraph',
              }
            ]
          })
          .run()
      }
    }
  }
})
